{{#section 'head'}}
<!-- stuff that goes in head...example: -->
<link href="/CSS/member.css" rel="stylesheet">
{{/section}}

<div class="container">
    <div class="columns custom-flex my-5">
        <div class="column is-two-thirds bg-555 friends my-3 pt-3 mx-5">
            <h1 class="has-text-centered is-size-2 mb-4">Your Playlists</h1>
            <div class="line mb-3"></div>
            <div class="columns custom-flex">
                <ul class="myPlaylists">
                    {{#if user.playlists}}
                    {{#each user.playlists as |playlist|}}
                    <li><a href='{{playlist.id}}'>{{playlist.name}}</a></li>
                    <li><button>Delete Playlist</button></li>
                    {{/each}}
                    {{else}}
                    <li>You do not have any playlists yet!</li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </div>
</div>